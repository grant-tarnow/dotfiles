set clipboard=unnamedplus

syntax on

set number
set relativenumber

set hlsearch

set tabstop=4
set shiftwidth=4
"set expandtab

set linebreak
set breakindent
set breakindentopt=shift:2

set autoindent

set splitright
set splitbelow

set ruler
set showcmd
set wildmode=list:longest
set ttyfast

set termguicolors
colorscheme desert
